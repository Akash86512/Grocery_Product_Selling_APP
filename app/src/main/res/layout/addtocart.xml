<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:layout_margin="2dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart"
                android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/cartitemname"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/cartbrandname"
                android:text="parle"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgaeurl"
                   android:layout_alignParentLeft="true"
                    android:src="@drawable/android"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/imgaeurl"
                    android:layout_marginLeft="15dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:textColor="@color/black"
                             android:id="@+id/cartitemprice"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/cartitemweight"
                            android:textSize="14sp"/>



                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="100dp"
                            android:id="@+id/noof_pices_box_lari_kg"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/noof_pices_box_lari_kg_price"
                            android:textSize="14sp"/>



                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="#D2969690" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/noofcartoon_bag"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="100dp"
                            android:id="@+id/noofcartoon_bag_price"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"/>



                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:text="Remove"
                    android:id="@+id/remove"
                    android:background="@color/gray1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/total"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="1dp"
                    android:background="@color/gray1"
                    android:layout_height="match_parent"
                    android:textSize="16sp"/>



                </LinearLayout>



            </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>