<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Addaddress">

    <android.support.v7.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar"
        >

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/currentlocation"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_location1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="USE MY CURRENT LOCATION"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/edtname"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#d3d3d3"
                android:textColor="@color/black"
                android:hint="Name"
                android:textSize="17sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtmobile"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#d3d3d3"
                android:textColor="@color/black"
                android:hint="Mobile number"
                android:textSize="17sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtpincode"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#d3d3d3"
                android:textColor="@color/black"
                android:hint="Pincode"
                android:textSize="17sp"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtshop"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#d3d3d3"
                android:textColor="@color/black"
                android:hint="Shop name,House No., Building name*"
                android:textSize="17sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtroad"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#d3d3d3"
                android:textColor="@color/black"
                android:hint="Road Name,Area,Colony*"
                android:textSize="17sp"/>

        </android.support.design.widget.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtcity"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#d3d3d3"
                    android:textColor="@color/black"
                    android:hint="city*"
                    android:textSize="17sp"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/edtcity"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtstate"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#d3d3d3"
                    android:textColor="@color/black"
                    android:hint="State*"
                    android:textSize="17sp"/>

            </android.support.design.widget.TextInputLayout>




        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtlandmark"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#d3d3d3"
                android:textColor="@color/black"
                android:hint="Landmark*"
                android:textSize="17sp"/>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/gray1"
            android:text="payment mode : Cash on delivery"
            android:textSize="18sp"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ll"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">







        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="â‚¹ 40000"
            android:id="@+id/totalamount"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/order"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Place order"
            />

    </LinearLayout>

    </RelativeLayout>








</LinearLayout>